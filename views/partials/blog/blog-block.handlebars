<!-- News Post -->
			{{!-- <div class="col-xl-4 col-lg-6 news_post_col"> --}}
			<div class="events_item">
				<div class="news_post">
					<div class="news_image"><a href="./blog-{{changeSpacesToDashes this.fields.title}}"><img
								data-src="{{this.fields.image.fields.file.url}}" class="lazyload" alt=""></a></div>
					<div class="news_post_content">
						<div class="news_post_title">
							<a href="./blog-{{changeSpacesToDashes this.fields.title}}">{{this.fields.title}}</a>
						</div>
						<div class="news_post_meta">
							<ul>
								<li><i class="fa fa-user" aria-hidden="true"></i><a
										href="#">{{#each fields.author}}{{this}}{{/each}}</a></li>
								<li><i class="fa fa-calendar-o" aria-hidden="true"></i><a
										href="#">{{this.fields.formattedDate}}</a></li>
								{{!-- <li><i class="fa fa-comment" aria-hidden="true"></i><a href="#">15</a></li> --}}
							</ul>
						</div>
						<div class="news_post_text">
							{{#if fields.excerpt}}
							<p>{{this.fields.excerpt}}...</p>
							{{/if}}
						</div>
					</div>
				</div>
			</div>