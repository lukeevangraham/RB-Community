<!-- Contact -->

<div class="contact">
  <div class="container">
    <div class="row">

      <!-- Contact Info -->
      <div class="col-lg-6">
        <div class="contact_info">
          <h1 class="invisible">contact us</h1>
          <div class="contact_title">contact us</div>
          <div class="contact_info_content">
            <ul>
              <li><div><i
                    class="fa fa-map-marker"
                    aria-hidden="true"
                  ></i></div><a
                  href="https://goo.gl/maps/QTpJP1HUiNJRcGVp9"
                  target="_blank"
                  rel="noopener noreferrer"
                ><span>17010 Pomerado Rd, San Diego, California 92128</span></a></li>
              <li><div><i class="fa fa-phone" aria-hidden="true"></i></div><span
                >858.487.0811</span></li>
              <li><div><i
                    class="fa fa-envelope"
                    aria-hidden="true"
                  ></i></div><span>info@rbcpc.org</span></li>
              <li><div><i class="fa fa-globe" aria-hidden="true"></i></div><span
                >www.rbcommunity.org</span></li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="col-lg-6 contact_form_col">
        <div class="contact_form">
          <div class="contact_title">keep in touch</div>

          <!-- Contact Form -->
          <div class="contact_form_container">
            <form
              action="javascript:handleContactSubmission(this)"
              method="POST"
              id="contactForm"
            >
              <div class="row">
                <div class="col-lg-6">
                  <input
                    type="text"
                    class="form_input"
                    placeholder="Your Name"
                    required="required"
                    name="name"
                  />
                </div>
                <div class="col-lg-6">
                  <input
                    type="email"
                    class="form_input email_input"
                    placeholder="Your Email"
                    required="required"
                    name="email"
                  />
                </div>
                <div class="col-12">
                  <textarea
                    class="form_text"
                    placeholder="Your Message"
                    required="required"
                    name="message"
                  ></textarea>
                  <button type="submit" class="form_submit_button">send comment</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

